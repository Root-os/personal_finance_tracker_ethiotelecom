{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": ["<rootDir>/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "services/**/*.js",
    "controllers/**/*.js", 
    "middleware/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"]
}
